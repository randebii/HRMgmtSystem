@model HRMS.Web.Models.EducationalBackgroundDtl


@using (Html.BeginForm("create", "educationalbackground", FormMethod.Post, new { id = "edu-form" })) 
{
    <input type="hidden" value="0" name="Id" />
    <input type="hidden" value="@ViewBag.EmployeeId" name="EmployeeId" />
    
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true)

        <div class="form-group">
            <div class="col-md-12">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control max-width" })
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.DropDownListFor(model => model.Type, (IEnumerable<SelectListItem>)ViewBag.EducationalTypes, new { @class = "form-control max-width" })
                    @Html.ValidationMessageFor(model => model.Type)
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                @Html.LabelFor(model => model.Degree, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.TextBoxFor(model => model.Degree, new { @class = "form-control max-width" })
                    @Html.ValidationMessageFor(model => model.Degree)
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.TextAreaFor(model => model.Address, new { @class = "form-control max-width" })
                    @Html.ValidationMessageFor(model => model.Address)
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                @Html.LabelFor(model => model.ContactNumber, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.TextBoxFor(model => model.ContactNumber, new { @class = "form-control max-width" })
                    @Html.ValidationMessageFor(model => model.ContactNumber)
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                @Html.LabelFor(model => model.YearAttended, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.TextBoxFor(model => model.YearAttended, new { @class = "form-control max-width" })
                    @Html.ValidationMessageFor(model => model.YearAttended)
                </div>
            </div>
        </div>

    </div>
}
